/dts-v1/;

#include "mt7620a.dtsi"

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>

/ {
	compatible = "ralink,mt7620a-soc";
	model = "Netgear EX3700";

	chosen {
		/*bootargs = "console=ttyS0,57600"*/
		bootargs = "console=ttyS0,57600 loglevel=7 netconsole=6665@192.168.1.1/eth0,6666@192.168.1.2/";
	};

	gpio-leds {
		compatible = "gpio-leds";

		power_g {
			label = "ex3700:green:power";
			gpios = <&gpio2 23 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		power_a {
			label = "ex3700:amber:power";
			gpios = <&gpio2 28 GPIO_ACTIVE_LOW>;
			default-state = "on"; /* FIXME */
		};

		wps {
			label = "ex3700:green:wps";
			gpios = <&gpio2 27 GPIO_ACTIVE_LOW>;
			default-state = "on"; /* FIXME */
		};
	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;

		reset {
			label = "reset";
			gpios = <&gpio2 26 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};

		wps {
			label = "wps";
			gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_WPS_BUTTON>;
		};
	};
};

&gpio0 {
	status = "okay";
};

&gpio2 {
	status = "okay";
};

&spi0 {
	status = "okay";

	m25p80@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partition@0 {
			label = "u-boot";
			reg = <0x0 0x30000>;
			read-only;
		};

		nvram: partition@30000 {
			label = "nvram";
			reg = <0x30000 0x10000>;
			read-only;
		};

		factory: partition@40000 {
			label = "factory";
			reg = <0x40000 0x10000>;
			read-only;
		};

		partition@50000 {
			label = "firmware";
			reg = <0x50000 0x7b0000>;
			/* better safe than sorry */
			read-only;
		};
	};
};

&ethernet {
	mtd-mac-address = <&factory 0x0>;
};

